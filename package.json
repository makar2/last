{
  "name": "local-area-streamer",
  "version": "2.0.0-alpha",
  "main": "dist/app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinkermakar/last.git"
  },
  "scripts": {
    "dev-tsx": "tsx watch --clear-screen=false --env-file=.env src/app",
    "dev-tsc": "tsc --watch",
    "start": "concurrently --kill-others npm:dev-*",
    "start:prod": "NODE_ENV=production tsc && node --env-file=.env .",
    "tsc-lint": "tsc --noEmit --noUnusedLocals --noUnusedParameters",
    "eslint": "eslint --ext .ts .",
    "prettier": "prettier --ignore-path .gitignore --ignore-path .hbs-ignore --write .",
    "lint": "npm run tsc-lint && npm run eslint"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "hbs": "^4.2.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/hbs": "^4.0.4",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "pre-commit": [
    "prettier",
    "lint"
  ]
}
