<video id='video-main' controls>
  <source src='{{src}}?token={{chromecastToken}}' type='video/mp4' />
  <track label='Default subtitles' kind='subtitles' src='{{subtitleSrc}}' default />
</video>

<br />
<br />
<button type="button" class="player-seek seek-minus">-10s</button>
<button type="button" class="player-seek seek-plus">+10s</button>
<h1><span id='dir'>{{dir}} /</span> {{name}}</h1>
<a id='back-button' href='{{back}}'><button>Back</button></a>
<br />
<br />
{{#if nextVideo}}
  <a id='next-button' href='{{nextVideo}}'><button>Next</button></a>
{{/if}}

{{> footer}}

<script>
  const startTime = {{startTime}}
  const nextVideo = "{{nextVideo}}"
</script>
<script defer src='/scripts/player.js'></script>