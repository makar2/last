<h1>File Browser</h1>

<h2>Breadcrumb</h2>
<ul>
  {{#each breadcrumb}}
    <li><a href='{{this.url}}'>{{this.name}}</a></li>
  {{/each}}
</ul>

<h2>Directories</h2>

<ul>
  {{#each directories}}
    <li><a href='{{this.url}}'>{{this.name}}</a></li>
  {{/each}}
</ul>

<h2>Videos</h2>

<ul>
  {{#each videos}}
    <li>
      <a href='{{this.url}}'>{{this.name}}</a>
      {{#if this.progress includeZero=true}}
        [{{this.progress}}%]
      {{/if}}
    </li>
{{/each}}
</ul>

<h2>Other</h2>
<ul>
  {{#each other}}
    <li><a href='{{this.url}}'>{{this.name}}</a></li>
  {{/each}}
</ul>

{{#if this.hasProgressFile}}
  <form method="POST" action="{{this.url}}">
  <button type="submit" value="reset-progress">Reset Progress</button>
</form>
{{/if}}

{{> logout}}